{
    "name": "sakanjo/filament-easy-testings",
    "description": "Filament plugin to make testing easier",
    "license": "MIT",
    "keywords": [
        "laravel",
        "plugins",
        "filament-plugins"
    ],
    "authors": [
        {
            "name": "Salah Kanjo",
            "email": "dev.salah.kanjo@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^4.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "laravel/pint": "^1.1",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0",
        "larastan/larastan": "^3.0",
        "pestphp/pest-plugin-livewire": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "SaKanjo\\FilamentEasyTestings\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SaKanjo\\FilamentEasyTestings\\Tests\\": "tests/src/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SaKanjo\\FilamentEasyTestings\\FilamentEasyTestingsServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/pint --test",
            "@php vendor/bin/phpstan",
            "@php vendor/bin/pest --parallel"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
